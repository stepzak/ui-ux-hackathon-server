FROM ui-ux-base:latest

WORKDIR /app

USER root

RUN chown -R fastapi-user:fastapi-user /app && \
    mkdir -p /app/versions && \
    chown -R fastapi-user:fastapi-user /app/versions

USER fastapi-user

CMD ["python", "-m", "uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--reload-dir", "/app/src", "--reload-include", "*.py", "--timeout-keep-alive", "1200"]